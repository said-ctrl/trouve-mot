{% extends 'base.html.twig' %}

{% block title %}RapPendu!{% endblock %}

{% block body %}


<div >
    <h1 class="text-3xl border-2">Jeu de pendurap </h1>
    <p class="text-2xl"><strong>Chanson :</strong>{{ title }}</p>
        <p class="text-2xl"><strong>Artiste :</strong>{{ artist }}</p>
            <p class="text-2xl"><strong>Phrase a deviner :</strong></p>
            <p class="text-2xl">
            {% for mot in mots_devines %}
            {{ mot }}
                
            {% endfor %}
            </p>
                    <p class="text-2xl"><strong>Phrase avec partie manquante :</strong></p>
                    <p class="text-2xl">{{ missing }}</p>

                                        <p class="text-2xl"><strong>Score :</strong>{{ score }}</p>




      
    <form id="form" action="{{'game_index'}}">
        <input type="text" id="guess" placeholder="Entrez votre reponse">
        <button type="submit">Deviner</button>
    </form>
    <p id="message"></p>
    <p id="current-guess"></p>
    
     
{% endblock %}




    